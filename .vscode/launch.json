{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Rust",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/rastreadorweb",
            "args": [
                "https://www.sonhodospesoficial.com.br/",
